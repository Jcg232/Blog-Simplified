<div class="blog-container">
  <% if (posts && posts.length > 0) { %> <% posts.forEach(function(post) { %>
  <div class="blog-card">
    <img
      src="<%= post.image || '/images/default.jpg' %>"
      alt="<%= post.title %>"
      class="blog-image"
    />
    <div class="blog-content">
      <h3><a href="/posts/<%= post.id %>"><%= post.title %></a></h3>
      <p><%= post.content.substring(0, 150) %>...</p>
      <a href="/posts/<%= post.id %>" class="read-more">Read more</a>
    </div>
  </div>
  <% }) %> <% } else { %>
  <p>No blog posts yet. Be the first to write one!</p>
  <% } %>
</div>
